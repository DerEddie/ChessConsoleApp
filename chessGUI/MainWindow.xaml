<Window x:Class="ChessTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessTest1"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Label Grid.RowSpan="1" Grid.Row="0" Grid.Column="0" Background="BlueViolet" ></Label>

        <UniformGrid x:Name="ChessBoardGrid" Grid.RowSpan="1" Grid.Row="1" Grid.Column="0">


        </UniformGrid>
        <Label Grid.RowSpan="1" Grid.Row="2" Grid.Column="0" Background="BlueViolet" ></Label>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label x:Name="StatusBar"  Grid.RowSpan="1" Grid.Row="0" Grid.Column="1"></Label>
            <Button x:Name="Starter" Content="Start!" Click="StartButton_Click"></Button>
        </Grid>

        
    </Grid>


</Window>